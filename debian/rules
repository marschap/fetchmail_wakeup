#!/usr/bin/make -f

build: build-stamp

build-stamp:
	dh_testdir
	$(MAKE) DOVECOT_INC_PATH=/usr/include/dovecot \
		PLUGIN_NAME=lib90_fetchmail_wakeup_plugin.so \
		build
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	$(MAKE) PLUGIN_NAME=lib90_fetchmail_wakeup_plugin.so \
		clean
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	$(MAKE) DESTDIR=$(CURDIR)/debian/dovecot-fetchmail \
		PLUGIN_NAME=lib90_fetchmail_wakeup_plugin.so \
		install

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_install
	dh_installman
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
